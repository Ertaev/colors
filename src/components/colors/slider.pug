div.splide.hero__slider
	div.splide__track

		//- [Слайдер]: Слайды
		div.splide__list

			each slide in slides
				//- [Слайдер]: Слайд
				div.splide__slide
					div.hero__slide(style=`background-image: url('${slide.image}')`)
						h2= slide.title

						p= slide.text

	//- [Слайдер]: Навигация
	div.splide__arrows.splide__arrows--ltr.container
		button.hero__slider-arrow.splide__arrow.splide__arrow--prev
			svg(width="22" height="42" viewBox="0 0 22 42" fill="none" xmlns="http://www.w3.org/2000/svg")
				path(d="M1 41L21 21L1 1" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

		button.hero__slider-arrow.splide__arrow.splide__arrow--next
			svg(width="22" height="42" viewBox="0 0 22 42" fill="none" xmlns="http://www.w3.org/2000/svg")
				path(d="M1 41L21 21L1 1" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

